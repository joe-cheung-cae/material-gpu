{
    "editor.fontSize": 14.5,
    "editor.formatOnSave": true,
    "terminal.integrated.fontSize": 14,
    "git.detectSubmodulesLimit": 1000,
    "files.exclude": {
        "**/.git": false,
    },
    "C_Cpp.intelliSenseEngine": "disabled",
    "clangd.arguments": [
        "--clang-tidy",
        "--compile-commands-dir=${workspaceFolder}/build",
        "--header-insertion=never",
        "-j=4",
    ],
    "cSpell.enabled": true,
    "cSpell.customDictionaries": {
        "project-words": {
            "name": "project-words",
            "path": "${workspaceFolder}/.vscode/project-words.txt",
            "description": "Words used in project GPU-Material.",
            "addWords": true,
        },
        "custom": true, // Enable the 'custom' dictionary
    },
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "libs"
    ],
    "files.associations": {
        "*.cu": "cpp",
        "*.batch": "bat",
        "*.h": "cpp",
        "*.cpp": "cpp",
        "*.py": "python",
        "*.cuh": "cpp",
        "*.tcc": "cpp",
        ".clangd": "yaml",
        ".clang-tidy": "yaml",
        "*.inl": "cpp",
        "log": "log",
        "iomanip": "cpp",
        "iostream": "cpp",
        "fstream": "cpp",
        "iosfwd": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "bitset": "cpp",
        "chrono": "cpp",
        "compare": "cpp",
        "concepts": "cpp",
        "condition_variable": "cpp",
        "cstdint": "cpp",
        "deque": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "map": "cpp",
        "string": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "vector": "cpp",
        "exception": "cpp",
        "algorithm": "cpp",
        "functional": "cpp",
        "iterator": "cpp",
        "memory": "cpp",
        "memory_resource": "cpp",
        "numeric": "cpp",
        "optional": "cpp",
        "random": "cpp",
        "ratio": "cpp",
        "regex": "cpp",
        "string_view": "cpp",
        "system_error": "cpp",
        "tuple": "cpp",
        "type_traits": "cpp",
        "utility": "cpp",
        "initializer_list": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "numbers": "cpp",
        "ostream": "cpp",
        "semaphore": "cpp",
        "sstream": "cpp",
        "stdexcept": "cpp",
        "stop_token": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "cinttypes": "cpp",
        "typeindex": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp"
    },
    "cmake.options.statusBarVisibility": "compact",
}